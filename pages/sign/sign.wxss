/* pages/sign/sign.wxss */


.container1 {
  display: flex;
  flex-direction: column;
}

.text {
  font-size: 30rpx;
  width: 20%;
}

.input {
  border-style: solid;
  border-left-width: 0px;
  border-right-width: 0px;
  border-top-width: 0px;
  border-bottom-width: 1px;
  text-align:center;
}

.view1 {
  height: 50%;
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: center;
  padding-left: 30%;
  padding-right: 30%;
}

.view2 {
  height: 50%;
  display: flex;
  flex-direction: row;
  align-items: center;
}

.form {
  height: 100%;
}

.modalview{
  padding: 10rpx 15rpx;
  padding-top: 0rpx;
  padding-bottom: 0rpx;
  position: relative;
  display:-webkit-box;
  margin-bottom: 15rpx;
  -webkit-box-pack:center;
}
.modaltext{
  background: lightblue;
  -webkit-box-flex: 1;
}
.modalinput{
  margin-left: 5px;
  padding-left: 20px;
  border-style: solid;
  border-left-width: 0px;
  border-right-width: 0px;
  border-top-width: 0px;
  border-bottom-width: 1px;
}
